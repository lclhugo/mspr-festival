{% extends 'base.html.twig' %}

{% block title %}LocationCategory index{% endblock %}

{% block body %}
    <h1>LocationCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location_category in location_categories %}
            <tr>
                <td>{{ location_category.id }}</td>
                <td>{{ location_category.name }}</td>
                <td>
                    <a href="{{ path('app_location_category_show', {'id': location_category.id}) }}">show</a>
                    <a href="{{ path('app_location_category_edit', {'id': location_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_location_category_new') }}">Create new</a>
{% endblock %}
