{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <h1>Event du festival {{ festival.name }}</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.name }}</td>
                <td>{{ event.startDate ? event.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.endDate ? event.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary"  href="{{ path('app_event_show', {'festivalId': festival.id, 'id': event.id}) }}">show</a>
                    <a class="btn btn-primary"  href="{{ path('app_event_edit', {'festivalId': festival.id, 'id': event.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

 <a href="{{ path('app_event_new', {'festivalId': festival.id}) }}">Create new</a>


{% endblock %}


