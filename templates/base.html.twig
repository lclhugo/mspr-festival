        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
       <link rel="stylesheet" href="{{asset('css/admin.css')}}" /> 

    </head>
    {% if app.user %}
        <body>
            {% block body %}{% endblock %}
        </body>
    {% else %}
        <body>
            <div class="mb-3">
                Vous devez être inscrit ou connecté pour consulter les pages : 
                <a href="{{ path('app_login') }}">Login</a> 
                <a href="{{ path('app_register') }}">Signup</a>
            </div>
        </body>
    {% endif %}
</html>
