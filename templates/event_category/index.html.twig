{% extends 'adminbase.html.twig' %}

{% block title %}Type d'évènement{% endblock %}

{% block body %}
    <div class="container mx-auto">
        <div class="flex justify-end">
            <a href="{{ path('app_event_category_new') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 mt-3 rounded">Ajouter</a>
        </div>
        <h1 class="text-3xl font-bold text-center">Type d'évènement</h1>

        <div class="flex flex-wrap justify-center mt-3">
            {% for cat in event_categories %}
                <div class="max-w-sm rounded overflow-hidden shadow-lg m-3 bg-gray-700 px-3 py-3">
                    <div class="px-6 py-4">
                        <div class="font-bold text-xl mb-2">{{ cat.name }}</div>
                    </div>
                    <div class="px-6 pt-4 pb-2">
                        <a href="{{ path('app_event_category_edit', {'id': cat.id}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Edit</a>
                    </div>
                </div>
            {% else %}
                <p class="text-center">Aucun type de lieu</p>
            {% endfor %}
        </div>
    </div>



{% endblock %}