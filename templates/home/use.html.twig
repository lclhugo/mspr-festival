													<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
												</svg>
												<span class="sr-only">Close modal</span>
											</button>
										</div>
										<!-- Modal body -->
										<div class="p-6 space-y-6">
											<p class="text-base leading-relaxed text-gray-500 ">
												{{notification.content}}
											</p>
											{# <p class="text-base leading-relaxed text-gray-500 dark:text-gray-400">
																						                  
																						                </p> #}
										</div>
										<!-- Modal footer -->
										<div class="flex items-center p-6 space-x-2 border-t border-gray-200 rounded-b dark:border-gray-600">
											<button data-modal-hide="defaultModal{{key}}" type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center  dark:hover:bg-blue-700 dark:focus:ring-blue-800">I accept</button>
