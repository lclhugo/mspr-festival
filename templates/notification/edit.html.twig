{% extends 'adminbase.html.twig' %}


{% block title %}Modifier une Notification{% endblock %}

{% block body %}

    <div class="flex justify-center mt-10">
        <div class="w-8/12 bg-gray-900 p-6 rounded-lg border border-gray-700">
            <h1 class="text-3xl font-bold text-center text-white">{{ festival.name }}</h1>
            <h2 class="text-3xl font-bold text-center text-white">Modifier une notification</h2>
            <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
                {{ include('notification/_form.html.twig') }}
            </div>
        </div>
    </div>
    <div class="flex justify-center mt-10">
        <form action="{{ path('app_notification_delete', {'festivalId': festival.id, 'id': notification.id}) }}"
              method="post" onsubmit="return confirm('Voulez-vous vraiment supprimer cette notification ?');">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ notification.id) }}">
            <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Supprimer
            </button>
        </form>
    </div>


{% endblock %}
